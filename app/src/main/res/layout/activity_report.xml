<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReportActivity.ReportActivity"
    android:background="@color/colorPrimaryDark">

    <include
        android:id="@+id/include6"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_report_header_edit_text"
        style="@style/RegisterTextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Başlık"

        app:layout_constraintTop_toBottomOf="@+id/include6"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/activity_report_message_edit_text"
        style="@style/RegisterTextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:hint="Mesaj"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/activity_report_header_edit_text"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_report_report_button"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Raporla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_report_message_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>