<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity.SettingsActivity"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/activity_settings_profile_update_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:textSize="19sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Profil Güncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

        </LinearLayout>
        <ImageView
            android:foregroundGravity="center"
            android:layout_marginRight="10dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/activity_settings_password_update_frame_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Şifre Değiştir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>
        <ImageView

            android:layout_marginRight="10dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/activity_settings_notification_configuration_frame_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:textSize="19sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Bildirim Ayarları"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="bottom"/>
    </FrameLayout>



    <FrameLayout
        android:layout_marginTop="5dp"

        android:id="@+id/activity_settings_events_configuration_frame_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="19sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Etkinlik Ayarları"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="bottom"/>
    </FrameLayout>



    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/activity_settings_logout_frame_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="19sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Çıkış Yap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_gravity="bottom"/>
    </FrameLayout>

</LinearLayout>
