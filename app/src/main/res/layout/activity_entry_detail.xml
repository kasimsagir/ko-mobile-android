<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.EntryDetailActivity.EntryDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/include"
                layout="@layout/toolbar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

                <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
                    android:id="@+id/activity_entry_detail"
                    android:layout_width="269dp"
                    android:layout_height="229dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@color/orange"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.357"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/activity_entry_report_button"
                    style="@style/ButtonStyle"
                    android:layout_width="74dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Raporla"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/activity_entry_detail"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_entry_detail"
                app:layout_constraintVertical_bias="0.041">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server             :" />

                    <TextView
                        android:id="@+id/activity_entry_detail_server_name_text_view"
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ilan Tarihi       :" />

                    <TextView
                        android:id="@+id/activity_entry_detail_advertisement_text_view"
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Başlık              :" />

                    <TextView
                        android:id="@+id/activity_entry_detail_title_text_view"
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Açıklama        :" />

                    <TextView
                        android:id="@+id/activity_entry_detail_description_text_view"
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fiyat                :" />

                    <TextView
                        android:id="@+id/activity_entry_detail_price_text_view"
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_green_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yayınlayan     :" />

                    <TextView
                        android:id="@+id/activity_entry_detail_published_text_view"
                        style="@style/EntryDetailStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_entry_detail_contact_button"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:text="İletişime Geç"
                 />


            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:layout_width="match_parent"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/red"
                android:id="@+id/activity_entry_detail_entry_config_button"
                android:textColor="@color/white"
                android:text="Gönderiyi düzenle"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>